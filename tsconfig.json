{
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"isolatedModules": true,
		"types": [
			"vite/client",
			"@types/node"
		],
		"useDefineForClassFields": true,
	},
	"include": [
		"src",
		"stories",
	]
}